package src.principal;
import src.troupes.*;

public class CapaciteEgyptiens implements Capacite {
    
    //Attribut
    Faction Egyptiens;

    public void getCAPACITE() {
        System.out.println("Après activation de la capacité, les Égyptiens augmentent leurs stats de défense de 50% pour la prochaine attaque subie.");
    }
    
    public void useCAPACITE() {        
        int inc = 0;
        for (Territoire elem : this.Egyptiens.territoires) {
            this.territoires[inc].troupes.majstats(0,50);
            inc++;
        }

}
