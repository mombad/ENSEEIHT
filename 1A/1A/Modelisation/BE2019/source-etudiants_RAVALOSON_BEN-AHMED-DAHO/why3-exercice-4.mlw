module Somme

  use int.Int
  use int.ComputerDivision
  use ref.Refint

  let somme (n: int) : int
    requires {  n>=0 }
    ensures  {  result=(div(n*(n+1))2) }
  =
    let i = ref 0 in
    let r = ref 0 in
    while  (!i < n) do
      invariant { (!r)=div((!i)*((!i)+1))2 && !i<=n}
      variant   { n-(!i) }
      i := (!i) + 1;
      r :=  (!r) + (!i)
    done;
    !r

end
