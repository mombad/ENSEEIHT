With lien;
use lien;
Package Registre is

    type T_Info is limited private;

    Type T_Registre is limited private;

    procedure Initialiser_R(R: out T_Registre);

    procedure Ajouter_R(R: in out T_Registre;Cle: in Integer; I: in T_Info);
    -- Exception Est_Present_Cle si la cle existe déjà.

    procedure Supprimer_R(R:in out T_Registre; Cle:in Integer);
    -- Exception Est_absent_Cle si la clé n'existe pas.

    procedure Modifier_R(R:in out T_Registre; Cle:in Integer; I: in T_Info);
    -- Exception Est_absent_Cle si la clé n'existe pas.

private

    Type T_Cellule_Registre;
    Type T_Registre is access T_Cellule_Registre;
    Type T_Cellule_Registre is
        record
            Cle: Integer;
            Information : T_Info;
            suivant: T_Registre;
        end record;

  type liste_cle;

type T_Info is access liste_cle;
type NSTR is array(1..40) of Character;
    type liste_cle is

        record
            info: NSTR;
            infosuivante1 : T_Info;
        end record;
end Registre;


